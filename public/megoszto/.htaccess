Order Allow,Deny
Allow from all

<FilesMatch "megoszto.php|megoszto.js">
    Header add X-Robots-Tag "noindex"
    Header add X-Robots-Tag "googlebot: nofollow"
    Header add X-Robots-Tag "otherbot: noindex, nofollow"
</FilesMatch>

<FilesMatch "\.htaccess">
    Order Deny,Allow
    Deny from all
</FilesMatch>

<FilesMatch "forras">
    Order Deny,Allow
    Deny from all
</FilesMatch>

RewriteEngine on

# Régi request.php URL-ek támogatása átírással
RewriteCond %{QUERY_STRING} (.*)
RewriteRule request\.php /megoszto/megoszto.php?letoltes&%1

# Fajlok mappa elérésének tiltása átirányítással
RewriteRule (.*)fajlok(.*) /megoszto/ [R=301,NC,L]
RewriteRule (.*)feltoltes.html(.*) /megoszto/ [R=301,NC,L]
RewriteRule (.*)feltoltes.php(.*) /megoszto/ [R=301,NC,L]

DirectoryIndex megoszto.html